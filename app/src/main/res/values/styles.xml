<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextBold" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/margin_start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBoldLarger" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_lager</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBoldWithBlackBackground" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">#ad000000</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/margin_start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style xmlns:app="http://schemas.android.com/apk/res-auto" name="CardItem" parent="Base.CardView">
        <item name="cardCornerRadius">@dimen/card_cornerRadius</item>
        <item name="android:elevation" tools:targetApi="lollipop">
            @dimen/cardview_default_elevation
        </item>
        <item name="android:layout_margin">@dimen/margin_start</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextDescription">
        <item name="android:textSize">@dimen/text_mini</item>
        <item name="android:textColor">@color/text_description_color</item>
    </style>
</resources>
