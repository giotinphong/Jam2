<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/CardItem"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_card_img_avatar"
            android:layout_width="@dimen/cardview_item_size"
            android:layout_height="@dimen/cardview_item_size"
            android:src="@drawable/jazz_thumbail"/>
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/play_icon_size"
            android:layout_height="@dimen/play_icon_size"
            app:cardBackgroundColor="@color/button_rectangle"
            app:cardCornerRadius="@dimen/play_icon_corner"
            android:layout_margin="5dp"
            android:elevation="5dp"
            >
            <ImageView
                android:layout_width="@dimen/play_icon_corner"
                android:layout_height="@dimen/play_icon_corner"
                android:layout_gravity="center"
                android:src="@drawable/play_icon"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="@dimen/cardview_item_size"
            android:layout_height="@dimen/cardview_item_size"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="#86393939">
            <TextView
                android:id="@+id/item_card_txt_name"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/text_white"/>
            <TextView
                android:id="@+id/item_card_txt_description"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textSize="@dimen/text_mini"
                android:textColor="@color/text_description_color"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
