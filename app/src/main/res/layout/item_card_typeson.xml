<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    style="@style/CardItem"
    android:layout_marginEnd="@dimen/cardview_item_typeson_margin"
    android:layout_marginStart="@dimen/cardview_item_typeson_margin"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_typeson_height"
    >
        <ImageView
            android:id="@+id/item_card_typeson_img_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/thumbail"
            android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_shadow"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/item_card_typeson_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBoldLarger"
            android:text="Name"/>
        <TextView
            android:id="@+id/item_card_typeson_txt_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextDescription"
            android:text="Name"/>

    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
